{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build",
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "types": ["jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "**/__tests__"
  ]
}